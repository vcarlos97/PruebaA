<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagen_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/des1"
         >

        </ImageView>

        <TextView
            android:id="@+id/nombre_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre objeto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imagen_item"
            android:layout_toEndOf="@id/imagen_item"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"

            >

        </TextView>

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:textStyle="bold"
            android:layout_below="@id/nombre_item"
            android:layout_toEndOf="@id/imagen_item"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"

            >

        </TextView>

        <TextView
            android:id="@+id/precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textStyle="bold"
            android:layout_below="@id/descripcion"
            android:layout_toEndOf="@id/imagen_item"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"

            >

        </TextView>

    </RelativeLayout>



</androidx.cardview.widget.CardView>